#include <WinSystem.h>

// ------------------------------------------------------------
// void GetWindowRect(WND Wnd, RECT *pRect)
// ------------------------------------------------------------
// Parameters
//  Wnd		- Window structure
//  pRect	- Pointer to a RECT to receive window rectangle
//
// Returns
//  Nothing
// ------------------------------------------------------------
void GetWindowRect(WND Wnd, RECT *pRect)
{
	pRect->Top		= Wnd.Frame.Top;
	pRect->Left		= Wnd.Frame.Left;
	pRect->Bottom	= Wnd.Frame.Bottom;
	pRect->Right	= Wnd.Frame.Right;
};
